{
  "name": "indra-node",
  "version": "6.1.5",
  "description": "",
  "author": "",
  "license": "MIT",
  "main": "dist/main.js",
  "scripts": {
    "build": "rm -rf ./dist/* && tsc -p tsconfig.json",
    "build-bundle": "webpack --config ops/webpack.config.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "../../node_modules/.bin/eslint -c '../../.eslintrc.js' --fix 'src/**/*'",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "concurrently --handle-input \"wait-on dist/main.js && nodemon\" \"tsc -w -p tsconfig.json\" ",
    "start:debug": "nodemon --config ops/nodemon-debug.json",
    "migration:generate": "typeorm migration:generate -d migrations -n ",
    "prestart:prod": "rm -rf dist && npm run build",
    "start:prod": "node dist/main.js",
    "test": "jest --config ops/jest.config.json",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@connext/apps": "6.1.5",
    "@connext/cf-core": "6.1.5",
    "@connext/contracts": "2.0.2",
    "@connext/utils": "6.1.5",
    "@connext/messaging": "6.1.5",
    "@connext/store": "6.1.5",
    "@connext/types": "6.1.5",
    "@nestjs/common": "7.0.8",
    "@nestjs/core": "7.0.8",
    "@nestjs/microservices": "7.0.8",
    "@nestjs/platform-express": "7.0.8",
    "@nestjs/typeorm": "7.0.0",
    "@openzeppelin/contracts": "2.5.0",
    "@uniswap/sdk": "1.0.0-beta.4",
    "bs58check": "2.1.2",
    "class-validator": "0.12.1",
    "dotenv": "8.2.0",
    "eccrypto-js": "4.5.4",
    "ethers": "4.0.47",
    "human-standard-token-abi": "2.0.0",
    "ioredis": "4.16.3",
    "nats": "1.4.8",
    "redlock": "4.1.0",
    "reflect-metadata": "0.1.13",
    "rxjs": "6.5.5",
    "pg": "8.0.3",
    "ts-natsutil": "1.0.6",
    "typeorm": "0.2.24"
  },
  "devDependencies": {
    "@connext/client": "6.1.5",
    "@nestjs/testing": "7.0.8",
    "@types/express": "4.17.6",
    "@types/jest": "25.2.1",
    "@types/node": "13.13.2",
    "@types/supertest": "2.0.8",
    "concurrently": "5.1.0",
    "jest": "25.4.0",
    "nodemon": "2.0.3",
    "supertest": "4.0.2",
    "ts-jest": "25.4.0",
    "ts-node": "8.9.0",
    "tsconfig-paths": "3.9.0",
    "typescript": "3.8.3",
    "wait-on": "4.0.2",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.11",
    "webpack-node-externals": "1.7.2"
  }
}
